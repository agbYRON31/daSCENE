            {[
              { id: "events", icon: Calendar, label: "Events" },
              { id: "my-rsvps", icon: CheckCircle2, label: "My RSVPs", badge: myRSVPs.length },
              { id: "map", icon: MapPin, label: "Venues" },
              { id: "profile", icon: User, label: "Profile" },
            ].map((tab) => (
              <button
                key={tab.id}
                onClick={() => setActiveTab(tab.id)}
